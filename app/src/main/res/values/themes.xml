<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodayRecord" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_000000</item>
        <item name="colorPrimaryVariant">@color/color_474a54</item>
        <item name="colorOnPrimary">@color/color_ffffff</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_000000</item>
        <item name="colorSecondaryVariant">@color/color_474a54</item>
        <item name="colorOnSecondary">@color/color_000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Shape -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.TodayRecord.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.TodayRecord.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.TodayRecord.LargeComponent</item>

        <!-- bottomSheet -->
        <item name="bottomSheetDialogTheme">@style/TodayRecordBottomSheetDialogTheme</item>

        <!-- Menu Style -->
        <item name="actionMenuTextAppearance">@style/TextAppearance.TodayRecord.Body3</item>
        <item name="actionMenuTextColor">@color/color_474a54</item>

        <!-- Alert Dialog -->
        <item name="materialAlertDialogTheme">@style/TodayRecordAlertDialogTheme</item>
    </style>

    <!-- Splash Screen -->
    <style name="Theme.TodayRecord.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/color_474a54</item>
        <item name="windowSplashScreenAnimatedIcon">@color/color_474a54</item>
        <item name="postSplashScreenTheme">@style/Theme.TodayRecord</item>
        <item name="android:statusBarColor">@color/color_474a54</item>
        <item name="android:navigationBarColor">@color/color_474a54</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- BottomSheetDialog Theme -->
    <style name="TodayRecordBottomSheetDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="colorOnSurface">@color/color_d9d9d9</item>
        <item name="bottomSheetStyle">@style/Widget.TodayRecord.BottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <!-- Alert Dialog -->
    <style name="TodayRecordAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorBackgroundFloating">@android:color/white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.TodayRecord.Dialog.Alert.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/TextAppearance.TodayRecord.Dialog.Alert.Body</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.TodayRecord.Dialog.Alert.Button.TextButton.Positive</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Widget.TodayRecord.Dialog.Alert.Button.TextButton.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.TodayRecord.Dialog.Alert.Button.TextButton.Negative</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Widget.TodayRecord.Dialog.Alert.Button.TextButton.Negative</item>
        <item name="dialogCornerRadius">12dp</item>
    </style>
</resources>