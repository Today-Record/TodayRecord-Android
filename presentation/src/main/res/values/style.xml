<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.TodayRecord" parent="TextAppearance.AppCompat" />

    <!-- TextAppearance -->
    <style name="TextAppearance.TodayRecord.Title">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="fontFamily">@font/font_regular</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TextAppearance.TodayRecord.Body1">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="fontFamily">@font/font_regular</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextAppearance.TodayRecord.Body2">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="fontFamily">@font/font_regular</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TextAppearance.TodayRecord.Body3">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="fontFamily">@font/font_regular</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="TextAppearance.TodayRecord.Body4">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="fontFamily">@font/font_regular</item>
        <item name="android:textSize">8dp</item>
    </style>

    <!-- TextView Widget -->
    <style name="Widget.TodayRecord.TextView.Title" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.TodayRecord.Title</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="lineHeight">28dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.TodayRecord.TextView.Body1" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.TodayRecord.Body1</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="lineHeight">24dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.TodayRecord.TextView.Body2" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.TodayRecord.Body2</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="lineHeight">24dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.TodayRecord.TextView.BodyLong2" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.TodayRecord.Body2</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="lineHeight">28dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.TodayRecord.TextView.Body3" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.TodayRecord.Body3</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="lineHeight">24dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.TodayRecord.TextView.Body4" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.TodayRecord.Body4</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Button Widget -->
    <style name="Widget.TodayRecord.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">?shapeAppearanceLargeComponent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TodayRecord.Body1</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:singleLine">true</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.TodayRecord.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearance">?shapeAppearanceSmallComponent</item>
        <item name="android:textAppearance">@style/TextAppearance.TodayRecord.Body3</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <!-- BottomSheet Widget -->
    <style name="Widget.TodayRecord.BottomSheet" parent="@style/Widget.MaterialComponents.BottomSheet.Modal">
        <item name="behavior_skipCollapsed">true</item>
        <item name="shapeAppearance">?shapeAppearanceSmallComponent</item>
    </style>

    <!-- Alert Dialog -->
    <style name="TextAppearance.TodayRecord.Dialog.Alert.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="fontFamily">@font/font_regular</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.TodayRecord.Dialog.Alert.Body" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="fontFamily">@font/font_regular</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textColor">@color/color_474a54</item>
    </style>

    <style name="Widget.TodayRecord.Dialog.Alert.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="fontFamily">@font/font_regular</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.TodayRecord.Dialog.Alert.Button.TextButton.Positive">
        <item name="android:textColor">@color/color_c14d4d</item>
    </style>

    <style name="Widget.TodayRecord.Dialog.Alert.Button.TextButton.Negative">
        <item name="android:textColor">@color/color_474a54</item>
    </style>
</resources>