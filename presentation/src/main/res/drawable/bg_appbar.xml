<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:ignore="StateListReachable">
    <item android:state_enabled="true" app:state_liftable="true" app:state_lifted="false">
        <color android:color="@color/color_ffffff" />
    </item>

    <item android:state_enabled="true">
        <layer-list>
            <item>
                <color android:color="@color/color_ffffff" />
            </item>

            <item android:left="-5dp" android:right="-5dp" android:top="-5dp">
                <shape android:shape="rectangle">
                    <stroke android:width="0.5dp" android:color="@color/color_474a54" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <color android:color="@color/color_ffffff" />
    </item>
</selector>